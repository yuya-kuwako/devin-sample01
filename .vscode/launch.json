    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Frontend (Angular)",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/frontend/video-app"
